{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "esnext",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "noEmit": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": true
    },
    "include": ["src/**/*"]
}